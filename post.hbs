{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
  <div class="row h-100 page-row">
  {{#post}}
      <div class="col col-xs-12 col-md-12 col-lg-12 main-content post-access-{{visibility}}">
        <article>
          <div class="post-head">
                <h1 class="text-center post-title">{{title}}</h1>
                <div class="post-subitems post-options text-center">
                  <i class="fas fa-calendar"></i><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                  <i class="fas fa-clock"></i>{{reading_time minute="Only a minute" minutes="Takes % minutes"}}
                </div>
          </div>

         <div class="d-block d-sm-block d-md-block d-lg-block tag_head_wrap">
          {{#if feature_image}}
            <img class="text-center w-100" src="{{img_url feature_image}}" title="{{title}}" alt="{{title}}" />
          {{/if}}
          </div>

          <div class="post-content post-access-{{visibility}} max-content-width">
            {{content}}

              <div class="post-tags-wrapper">
              {{#if tags}}
                <div class="tagslist">
                  {{#foreach tags}}
                      <a href="{{@site.url}}/tag/{{slug}}">#{{name}}</a>
                    {{/foreach}}
              </div>
              {{/if}}<!-- end tags if -->
              </div><!-- end cat links -->
          </div>
            {{> 'post/author-section'}}

            {{> 'post/related-posts'}}
        </article>
    </div>
{{/post}}
</div>
